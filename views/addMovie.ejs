<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Form</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-black text-white">

    <!-- Header -->
    <header class="bg-gray-700 p-4 flex items-center justify-between">
        <div class="flex items-center space-x-4">
            <img src="https://vozzy.tmrwstudio.net/content/images/2024/02/vozzy.svg" alt="Logo" class="w-40 h-15">
            <h1 class="text-2xl font-bold"></h1>
        </div>
        <div class="flex items-center space-x-4">

            <button class="bg-blue-600 p-2 rounded">Sign up</button>
            <button class="bg-blue-600 p-2 rounded">Sign in</button>
        </div>
    </header>

    <!-- Main layout -->
    <div class="flex">
        <!-- Sidebar -->
        <div class="w-1/5 bg-gray-700 p-4 h-screen">
            <!-- Sidebar items -->
            <ul class="space-y-4">
                <li><a href="/" class="p-2 hover:bg-gray-600 rounded cursor-pointer">Home</a></li>
                <li class="p-2 hover:bg-gray-600 rounded cursor-pointer">Search</li>
                <li class="p-2 hover:bg-gray-600 rounded cursor-pointer">Watchlist</li>
                <li class="p-2 hover:bg-gray-600 rounded cursor-pointer">Settings</li>
            </ul>
        </div>

        <!-- Main content -->
        <div class="w-4/5 p-4">
            <div class="bg-gray-800 p-8 rounded-lg shadow-lg w-full max-w-md m-auto">
                <h1 class="text-2xl font-bold mb-6">Add New Blog</h1>
                <form action="/addmovie" method="post" enctype="multipart/form-data">
                    <!-- Movie Name -->
                    <div class="mb-4">
                        <label for="movieName" class="block text-sm font-medium text-gray-300">Blog Title</label>
                        <input type="text" id="movieName" name="name"
                            class="mt-1 p-2 block w-full rounded bg-gray-700 border-gray-600 focus:ring-blue-500 focus:border-blue-500 text-white"
                            placeholder="Enter movie name">
                    </div>

                    <!-- Movie Description -->
                    <div class="mb-4">
                        <label for="movieDescription" class="block text-sm font-medium text-gray-300">Blog
                            Description</label>
                        <textarea id="movieDescription" name="disc" rows="4"
                            class="mt-1 p-2 block w-full rounded bg-gray-700 border-gray-600 focus:ring-blue-500 focus:border-blue-500 text-white"
                            placeholder="Enter movie description"></textarea>
                    </div>

                    <!-- Movie Poster -->
                    <div class="mb-6">
                        <label for="moviePoster" class="block text-sm font-medium text-gray-300">Blog Poster</label>
                        <input type="file" id="moviePoster" name="image" class="mt-1 block w-full text-gray-300">
                    </div>

                    <!-- Submit Button -->
                    <div class="flex justify-end">
                        <button type="submit"
                            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Add
                            Blog</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>

</html>